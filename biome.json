{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/.next",
      "!**/dist",
      "!**/.turbo",
      "!**/dev-dist",
      "!**/.zed",
      "!**/.vscode",
      "!**/routeTree.gen.ts",
      "!**/src-tauri",
      "!**/.nuxt",
      "!bts.jsonc",
      "!**/.expo",
      "!**/.wrangler",
      "!**/.alchemy",
      "!**/.svelte-kit",
      "!**/wrangler.jsonc",
      "!**/.source",
      "!**/_generated"
    ]
  },
  "extends": ["ultracite"],
  "css": {
    "linter": {
      "enabled": false
    }
  },
  "linter": {
    "rules": {
      "performance": {
        "noNamespaceImport": "off"
      }
    }
  },
  "overrides": [
    {
      "includes": [
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/test.setup.ts",
        "**/setup.ts"
      ],
      "linter": {
        "rules": {
          "style": {
            "noMagicNumbers": "off",
            "noNonNullAssertion": "off"
          },
          "suspicious": {
            "noExplicitAny": "off",
            "noEmptyBlockStatements": "off"
          },
          "performance": {
            "useTopLevelRegex": "off",
            "noBarrelFile": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/healthCheck.ts",
        "**/healthCheck.test.ts",
        "**/privateData.ts",
        "**/privateData.test.ts",
        "**/generatedSchema.ts"
      ],
      "linter": {
        "rules": {
          "style": {
            "useFilenamingConvention": "off"
          }
        }
      }
    },
    {
      "includes": ["**/router.tsx"],
      "linter": {
        "rules": {
          "nursery": {
            "useConsistentTypeDefinitions": "off"
          }
        }
      }
    },
    {
      "includes": ["**/test-utils.tsx"],
      "linter": {
        "rules": {
          "nursery": {
            "useConsistentTypeDefinitions": "off"
          },
          "performance": {
            "noBarrelFile": "off"
          }
        }
      }
    },
    {
      "includes": ["**/ui/calendar.tsx"],
      "linter": {
        "rules": {
          "correctness": {
            "noNestedComponentDefinitions": "off"
          },
          "nursery": {
            "noShadow": "off"
          }
        }
      }
    }
  ]
}
